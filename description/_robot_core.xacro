<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>
    

            <!-- Farben -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
        
    </link>
    <!-- CHASSIS LINK -->
    <joint name="cassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.15 0.0 0.0"/>
        
    </joint>


    <link name="chassis">
        <visual>
            <origin xyz="0.15 0.0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.15 0.0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>            
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origion xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box> 
    </link>

        <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 0.175 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.028"/>
            </geometry>
            <material name="blue"/>               
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.028"/>
            </geometry>               
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.028" radius="0.035">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.0 -0.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 -1.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.028"/>
            </geometry>
            <material name="blue"/>               
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.028"/>
            </geometry>               
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.028" radius="0.035">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- CASTER WHEEL FRONT LINK -->

    <joint name="caster_wheel_front_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_front"/>
        <origin xyz="0.24 0.0 0.0"/>        
    </joint>

    <link name="caster_wheel_front">
        <visual>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.035">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- CASTER WHEEL REAR LINK -->

    <joint name="caster_wheel_rear_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_rear"/>
        <origin xyz="0.05 0.0 0.0"/>        
    </joint>

    <link name="caster_wheel_rear">
        <visual>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.035">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Body Part

    <link name="body">
        <visual>
            <geometry>
                <cylinder radius="0.11" length="0.345"/>
            </geometry>
            <material name="yellow">
            </material>
        </visual>        
    </link>

    <joint name="body_joint" type="fixed">
        <parent link="chassis"/>
        <child link="body"/>
        <origin xyz="0.0 0.0 0.17"/>        
    </joint>
-->
</robot>